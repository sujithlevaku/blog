
<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

	          <!-- Title -->
	          <h1 class="mt-4"><%= @category.name %></h1>

	          <!-- Author -->
	          <p class="lead">
	            in 
	            <%= link_to @category.name, @category %>
	          </p>
	           	<hr>

         		 <!-- Post Content -->
         	 		<p> <%= raw(@category.description) %></p>
         		<hr>



          <h1 class="display-5"> Listing Articles
            <small><%= @category.articles.count %></small>
          </h1>


        <% @category.articles.each do |article| %>  	
          <!-- Blog Post -->
	          <div class="card mb-4">
	          	<%= image_tag(article.feature_image_url, size: "750x300", class: "card-img-top") %>
	            <div class="card-body">
	              <h2 class="card-title"><%= article.title %></h2>
	              <p class="card-text"><%= raw(article.body.truncate(250)) %></p>
	              <%= link_to "Read More", article, class: 'btn btn-primary' %> 
	            </div>
	            <div class="card-footer text-muted">
	              Posted on <%= article.publish_date.strftime("%B %d %Y") %>
	             <%= link_to article.category.name, article.category %>
	            </div>
	          </div>
          <% end %>














         		</div>
          
          
         
          <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">Web Design</a>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">JavaScript</a>
                    </li>
                    <li>
                      <a href="#">CSS</a>
                    </li>
                    <li>
                      <a href="#">Tutorials</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

         






<h2><%= @category.name%></h2>

<p> Related Topics - <%= @category.description %></p>

<p><%if @category.articles.empty?%></p>
<p>NO ARTICLES FOUND</p>
<%else%>
<h3> LISTING ARTICLES (<%= @category.articles.length%>)</h3>

<ol>
		<%@category.articles.each do |article|%>
		<li>
			<%= image_tag(article.feature_image_url ,size: "80x80" )%>

			<%= link_to article.title, article_path(article.id)%> 
			<%= article.body%> <br/>

			<h4> Is Published - <%= article.is_published%> </h4> <br/>
			<h4> Publish Date : <%= article.publish_date%> </h4> <br/>  
			<h4><%= article.category.name %></h4>
		</li>
		<%end%>

</ol>


<%end%>




<%= link_to "Edit", edit_category_path(@category) %> |
<%= link_to "Destroy",category_path(@category), method: :delete, date:{confirm: "Are you Sure?"}%> |
<%= link_to "ALL ", categories_path %>

