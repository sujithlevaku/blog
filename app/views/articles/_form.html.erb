<%=form_for @article do |f|%>
	<%if @article.errors.any?%>
	<h3>These errors prohibited the form </h3>
	<ul>
		<%@article.errors.full_messages.each do |msg|%>
		<li><%=msg%></li>
		<%end%>
	</ul>
	<%end%>


	<label for= "article_category_id"> Category :</label><br/>
	<%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %><br/>

	<label for= "article_title"> Title : </label><br/>
	<%= f.text_field :title %> <br/>
	
    <label for= "article_body "> Body  : </label><br/>
	<%= f.text_area :body%> <br/>

   <label for= "feature_image_url "> Image : </label><br/>
   <%= f.file_field :feature_image_url%> <br/>

  
    <label for= "article_publish_date "> Published date  : </label><br/>
	<%= f.date_field :publish_date, order: [:day, :month, :year]%><br/>

	<%=f.submit %>

	
<%end%>
